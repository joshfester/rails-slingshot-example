<div class="container py-5 h-full">
  <div class="row">
    <div class="col-md-6 col-lg-4 col-xl-3 mx-auto">

      <h1>Change your password</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mb-3">
          <%= f.label :password, "New password", class: 'form-label' %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.submit "Change my password", class: 'btn btn-primary w-100' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>